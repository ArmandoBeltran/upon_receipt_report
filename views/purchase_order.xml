<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="purchase_order_form_inherit_id" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.id</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='purchase_delivery_invoice']/group/group[@name='invoice_info']/field[@name='fiscal_position_id']" position="after">
                <field name="payment_deadline" string="Pago"/>
            </xpath>
        </field>
    </record>


</odoo>